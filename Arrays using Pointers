include <iostream>

using namespace std;

int main()
{
    int n;
    cout<<"No of elements in the array";
    cin>>n;
    int arr[n];
    cout<<"Enter elements:";
    
    for(int i=0;i<n;i++ )
    {
        
        cin>>arr[i];
    }
    
    int *ptr = &arr[0];
    cout<<"you entered:"<<"\n";
    for (int i=0;i<n;i++)
    {
        
        cout<< *ptr <<endl;
        ptr++;
    }

    return 0;
}
